<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding:15,15
            spacing:20,20
            Label:
                text:"User login"
                font_size: '20sp'
            TextInput:
                id:username
                hint_text:"Username"
            TextInput:
                id : password
                password:True
                hint_text:"Password"
            RelativeLayout:
                Button:
                    text:"Login"
                    on_press:root.login(root.ids.username.text,root.ids.password.text)
                    size_hint: 0.3, 0.5, 
                    pos_hint: {'x':0.37 , 'y':0.4 }
            Label:
                id:wrong
                text:""
        GridLayout:
            cols:2
            size_hint:0.2,0.2
            padding:10, 10
            spacing:10,0
            Button:
                text:"Forgot Password"
                background_color:1,1,1,0
                opacity:1 if self.state == 'normal' else 0.5
                color:0.1,0.7,1,1
                on_press:root.go_to_forgot_password()
            Button:
                background_color:1,1,1,0
                opacity:1 if self.state == 'normal' else 0.5
                color:0.1,0.7,1,1
                text:"Sign Up"
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols:1
        padding:20,20
        spacing:20,20
        Label:
            text:"Please sign up!"
        TextInput:
            id:username
            hint_text:"Username"
        TextInput:
            id:password
            hint_text:"Password"
        Button:
            text:"Submit"
            on_press:root.add_value(root.ids.username.text,root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols:1
        Label:
            text:"Sign up successfull !!!"
        Button:
            text:"Login page"
            on_press:root.main_page()

<LoginScreenSuccess>:
    GridLayout:
        cols:1
        padding:30,30
        spacing:30,30
        RelativeLayout:
            ImageButton:
                on_press:root.log_out()
                size_hint:0.35,0.35
                pos_hint:{'center_x':0.95,'center_y':0.8}
                source:'logout_hover.png' if self.hovered else 'logout_nothover.png'
        Label:
            text:"How do you feel !"
        TextInput:
            id:feeling
            hint_text:"Things to try:sad,happy,unsolved....."
        Button:
            text:"Englighten me"
            on_press:root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id:quote
                text:""
                text_size:self.width,None
                size_hint_y: None
                height:self.texture_size[1]

<ForgotPassword>:
    GridLayout:
        cols:1
        padding:30,30
        spacing:30,30
        Label:
            text:"Username"
        TextInput:
            id: username
            hint_text: "Username"
        Label:
            text: "New Password"
        TextInput:
            id: new_password
            hint_text: "Enter New Password"
        Button:
            text: "Change Password"
            on_press: root.change_password(root.ids.username.text,root.ids.new_password.text)
        Label:
            id: password_status
            text: ""

<rootWidget>
    LoginScreen:
        name : "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name:"sign_up_page_success"
    LoginScreenSuccess:
        name:"login_screen_success"
    ForgotPassword:
        name: "forgot_pass"